{
    "name": "sigauth-core-monorepo",
    "version": "1.0",
    "type": "module",
    "packageManager": "pnpm@10.30.0",
    "engines": {
        "node": ">=22.14.0"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "eslint": "^9.39.2",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.5",
        "eslint-plugin-react-hooks": "^5.2.0",
        "eslint-plugin-react-refresh": "^0.4.26",
        "globals": "^16.5.0",
        "jiti": "^2.6.1",
        "prettier": "^3.8.1",
        "typescript-eslint": "^8.55.0"
    },
    "workspaces": [
        "apps/*",
        "packages/*"
    ],
    "scripts": {
        "format": "prettier --write .",
        "build": "pnpm --filter @sigauth/sdk run build && pnpm -r --parallel --filter=!@sigauth/sdk --if-present run build",
        "build:topo": "pnpm -r --if-present run build",
        "start": "node apps/api/dist/main"
    }
}
