{
    "extends": "../../tsconfig.json",
    "include": ["src/**/*.ts", "prisma/**/*.ts"],
    "compilerOptions": {
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "esModuleInterop": true, // CommonJS-Module sauber importieren
        "resolveJsonModule": true, // .json-Dateien importierbar
        "allowSyntheticDefaultImports": true,
        "strict": true,

        "declaration": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "target": "es2024",
        "baseUrl": ".",
        "outDir": "./dist",
        "sourceMap": true,
        "strictNullChecks": true,
        "noImplicitAny": false,
        "strictBindCallApply": false,
        "noFallthroughCasesInSwitch": false
    }
}
